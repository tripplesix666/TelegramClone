<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/blue_200">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/toolbar_image"
        android:layout_width="@dimen/settings_user_photo_size"
        android:layout_height="@dimen/settings_user_photo_size"
        android:src="@drawable/ic_default_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_full_name"
        style="@style/normalText"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/toolbar_image"
        app:layout_constraintTop_toTopOf="@+id/toolbar_image"
        tools:text="Матвей Шамсутдинов" />

    <TextView
        android:id="@+id/contact_status"
        style="@style/smallText"
        android:textColor="@color/whiteDark"
        app:layout_constraintStart_toEndOf="@+id/toolbar_image"
        app:layout_constraintTop_toBottomOf="@+id/contact_full_name"
        tools:text="в сети" />


</androidx.constraintlayout.widget.ConstraintLayout>